<%= form_for :order, :url => populate_orders_url do |f| %>
  <div data-hook="inside_product_cart_form">

    <% if @product.price %>
    <%= hook :product_price do %>
        <dl id="product-price">
          <dt><%= t("price") %></dt>
          <dd><span class="price selling"><%= product_price(@product) %></span></dd>
        </dl>
    <% end %>
    <% end %>
   <%stock_val=find_stock_value("show_zero_stock_products")%>
					<%back_order_val=find_stock_value("allow_backorders")%>
    <% if @product.has_variants? %>
      <div id="product-variants">
        <h2><%= t('variants') %></h2>
        <ul>
          <%  has_checked = false
          @product.variants.active.each_with_index do |v,index|
					 next if v.option_values.empty? || (!v.in_stock && !stock_val)
            checked = !has_checked && (v.in_stock || back_order_val)
            has_checked = true if checked %>
            <li>
              <%= radio_button_tag "products[#{@product.id}]", v.id, checked, :disabled => !v.in_stock && !back_order_val%>
              <label for="<%= ['products', @product.id, v.id].join('_') %>">
                <span class="variant-description">
                  <%= variant_options v %>
                </span>
                <% if variant_price_diff v %>
                  <span class="price diff"><%= variant_price_diff v %></span>
                <% end %>
              </label>
            </li>
          <% end%>
        </ul>
      </div>
    <% end%>
    <% if @product.has_stock? || back_order_val%>
		<dl class="product-price">
		<dt>Quantity: </dt>
		<dd><%= text_field_tag (@product.has_variants? ? :quantity : "variants[#{@product.master.id}]"),
        1, :class => "title", :size => 3 %></dd>
		</dl>
      &nbsp;
      <div class="add-to-cart">
			<button type="submit" class="large primary" id="add-to-cart-button">
        <%= image_tag('icons/add-to-cart.png') + t('add_to_cart') %>
      </button>
			</div>
    <% else %>
      <%= content_tag('strong', t('out_of_stock')) %>
    <% end %>

  </div>
<% end %>

<% content_for :head do %>
  <%= javascript_include_tag 'product' %>
<% end %>
