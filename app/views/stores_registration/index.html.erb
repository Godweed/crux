 <div class="main-wrapper page">
	<h1 class="sign-up-title">Select Your Plan</h1>
</div>
<div class="main-wrapper page plan">
	<div class="table-wrap">
    <table cellpadding="0" cellspacing="0" width="100%" border="0">
            <tr>
                <th>Name</th>
                <th class="right fee">Fee</th>
                <th class="right fee">Trasaction Fee</th>
                <th class="right fee">No of Products</th>
                <th class="right">Payment Period</th>
            </tr>
						<%@plans && @plans.each do |plan|%>
           <tr class="add">
                <td class="txt-rt"><%= plan.plan_name%></td>
                <td class="right"><%= plan.amount%> $</td>
                <td class="right"><%= plan.transaction_fee%> %</td>
                <td class="right"><%= plan.no_of_products%></td>
                <td class="right">
                 <div class="tabel-td">
                     <div class="month"><%= plan.payment_period%></div>
                     <div class="sign-up-td"><a href="/store/<%= plan.id%>">Sign up</a></div>
                    </div>
             </td>
            </tr>
   		<%end%>
        </table>
   	</div>
</div>
